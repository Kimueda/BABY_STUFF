<div class="container pt-4">
  <h2><%= @offer.item_name %></h2>
  <p><%= @offer.category %></p>
  <p><%= @offer.description %></p>
  <p>$<%= @offer.rate %></p>
</div>

<div class="container">
  <%= simple_form_for [@offer, @request] do |f| %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.button :submit %>
  <% end %>
</div>

