<div class="container pt-4">
  <div class="row">
    <div class="col md-6 text-center">
      <h2 class= "offers-title"><%= @offer.item_name %></h2>
      <div class="bg-image hover-zoom ripple rounded ripple-surface">
      <% if @offer.photo.attached? %>
        <%= cl_image_tag @offer.photo.key, height: 200, width: 200 %>
      <% else %>
        <%= image_tag "blockset.jpg", class: "offers-image", height: 250, width: 200 %>
      <% end %>
      </div>
      <div class = "offers-text">
      <ul>
      <li>Category: <%= @offer.category %></li>
        <br>
      <li>Description: <%= @offer.description %></li>
        <br>
      <li>Location:  <%= @offer.address %></li>
        <br>
      <li>Price: <%= number_to_currency(@offer.rate, { unit: "Â¥", precision: 0 }) %>/day</li>
      </ul>
      </div>
    </div>

    <div class="col md-6 map-padding">
      <div style="width: 400px; height: 300px;"
        data-controller="map"
        data-map-markers-value="<%= @marker.to_json %>"
        data-map-api-key-value="<%= ENV["MAPBOX_API_KEY"] %>">
      </div>
    </div>
  </div>
</div>



<div class="container">
  <%= simple_form_for [@offer, @request] do |f| %>
    <%= f.input :start_date, as: :date, html5: true %>
    <%= f.input :end_date, as: :date, html5: true %>
    <%= f.button :submit, class: "button" %>
  <% end %>
</div>

