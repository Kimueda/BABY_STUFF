<h1 class = "mb-3 mt-3 text-center offer"> My Offers</h1>
<div class = "container mb-3">
<div class = "row justify-content-center">
<div class = "col-md-6">
<%= simple_form_for(@offer) do |f| %>
  <%= f.input :item_name %>
  <%= f.input :category %>
  <%= f.input :description %>
  <%= f.input :rate %>
    <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.button :submit, class: "button" %>
<% end %>
</div>
</div>
</div>




<div class = "my-offers">
  <div class="text-center">
    <% if @offers.empty? %>
      <p>You don't have any listings yet.</p>
    <% else %>
  </div>
    <% @offers&.each do |offer| %>

      <div class="card shadow mb-5 mt-3 offers-rental-card">
        <div class="card-body">
          <h5 class="card-title"><%= offer.item_name %></h5>
          <div class = "row">
          <div class = "col">
          <% if offer&.photo&.key %>
            <%= cl_image_tag offer.photo.key, height: 250, width: 200 %>
            <% end %>
            </div>
            <div class = "col">
          <ul class="card-text">
            <li class = "margin-li">Category: <%= offer.category %></li>
            <li class = "margin-li">Price: <%= number_to_currency(offer.rate, { unit: "Â¥", precision: 0 }) %>/day </li>
            <li class = "margin-li">Description: <%= offer.description %> </li>
            <li class =>Address: <%= offer.address %> </li>
            <br>
          </ul>
          <%= link_to "Delete", offer_path(offer), class: "button-decline ms-4", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
          <a href="#" class="button-edit">Edit</a>
        </div>

    </div>
    </div>
    </div>
    <% end %>
  <% end %>
</div>
</div>
</div>
</div>
