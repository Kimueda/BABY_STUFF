<div class="navbar navbar-expand-sm navbar-dark navbar-babyloop">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
            <%= link_to "Baby Gear", offers_path, class: "nav-link" %>
          </li>
          <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "My Offers", new_offer_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDarkDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Requests
          </a>
          <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="navbarDarkDropdownMenuLink">
            <li class="nav-item"><%= link_to "Incoming Requests", lessor_requests_path, class: "dropdown-item nav-link" %></li>
            <li class="nav-item"><%= link_to "Outgoing Requests", requests_path, class: "dropdown-item nav-link" %></li>
          </ul>
        </li>

          <li class="nav-item">
            <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-link logout-button-navbar" %>
          </li>
        <% end %>
        <% if !user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>

  </div>
</div>
